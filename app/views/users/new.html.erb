<%= form_with model: @user, local: true do |f| %>
  <%= f.label :username, "Your username here" %>
  <%= f.text_field :username, placeholder: "Choose a username" %>

  <%= f.label :email %>
  <%= f.email_field :email, placeholder: "example@example.com" %>

  <%= f.label :password %>
  <%= f.password_field :password %>

  <%= f.submit "Sign Up" %>
<% end %>
